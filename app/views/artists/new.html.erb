<h1>Create a New Artist</h1>
<br>
<br>
<hr>
<%= form_with(model: @artists, local: true, class: 'ui form') do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true, placeholder: 'Artist Name' %>
</div>
<%= f.submit nil, class: 'ui green button inverted' %>
<% end %>
