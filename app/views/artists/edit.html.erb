<h1>Edit Artist</h1>
<br>
<br>
<hr>
<%= form_with(model: @artist, local: true, class: 'ui form') do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true, value: @artist.name %>
</div>
<%= f.submit nil, class: 'ui green button inverted' %>
<% end %>